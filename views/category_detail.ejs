<!doctype html>
<html lang="en">
  <%- include('layouts/head'); -%>
  <body>
    <%- include('layouts/header'); -%>
    <%- include('layouts/sidebar'); -%>
    <main class="data-display">
      <section>
        <h2>
          Category:
          <%= category.name %>
        </h2>
        <p><%= category.description %></p>
      </section>
      <section>
        <h3>Items</h3>
        <% if (category_items.length > 0) { %>
        <ul>
          <% category_items.forEach((item) => { %>
          <li>
            <p>
              <strong>Name:</strong>
              <a href="<%= item.url %>"> <%= item.name %></a>
            </p>
            <p>
              <strong>Brand:</strong>
              <%= item.brand %>
            </p>
            <p>
              <strong>Price:</strong>
              $<%= item.price %>
            </p>
            <p>
              <strong>Number in Stock:</strong>
              <%= item.num_in_stock %>
            </p>
          </li>
          <% }) %>
        </ul>
        <% } else { %>
        <p>There are no items in this category.</p>
        <% } %>
      </section>
      <section>
        <h3>Options</h3>
        <div class="options">
          <a href="<%= category.url %>/update">Update category</a>
          <a href="<%= category.url %>/delete">Delete category</a>
        </div>
      </section>
    </main>
    <%- include('layouts/footer'); -%>
  </body>
</html>
